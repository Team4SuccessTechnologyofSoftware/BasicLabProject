<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6C648D">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spinner"
            android:background="#ffffff"
            app:srcCompat="@android:drawable/picture_frame"
            android:visibility="invisible" />

    <Button
        android:id="@+id/uploadImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinner"
        android:layout_below="@+id/spinner"
        android:text="Upload Pic"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/tVdescrOfProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productImage"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:text="Product Description :"
        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/productDescription"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tVdescrOfProd"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:visibility="invisible" />


    <EditText
        android:id="@+id/prodPrice"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDescription"
        android:layout_marginTop="21dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tVeuro"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/prodPrice"
        android:layout_toEndOf="@+id/prodPrice"
        android:text="â‚¬"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:visibility="invisible" />


    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:text="Submit"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/productDescription"
        android:layout_alignParentTop="true"
        android:dropDownWidth="500dp"
        android:tooltipText="Choose a category"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/checkLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/prodPrice"
        android:layout_marginTop="18dp"
        android:layout_toStartOf="@+id/submitButton"
        android:visibility="visible">

    </RelativeLayout>

    <Button
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/prodPrice"
        android:layout_toEndOf="@+id/checkLayout"
        android:text="location"
        android:visibility="invisible" />

</RelativeLayout>
