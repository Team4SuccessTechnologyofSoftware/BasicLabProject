<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steve.basiclabproject.bargain"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/bargTitle"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="0.13"
                android:text="TextView" />

            <ImageView
                android:id="@+id/bargImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:maxHeight="180dp"
                app:srcCompat="@drawable/onlinemarketpalces8" />

            <TextView
                android:id="@+id/bargDescr"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="0.16"
                android:text="TextView" />

            <TextView
                android:id="@+id/bargPrice"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="0.11"
                android:text="TextView" />

            <TextView
                android:id="@+id/bargDetails"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="0.13"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
